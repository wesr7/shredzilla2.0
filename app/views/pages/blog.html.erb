<div style="width: 80%; margin: 10px auto; padding-top: 30px; padding-bottom: 30px;">
<% @posts.each do |post| %>
  <div style="width: 100%; margin-bottom: 20px; border: 1px solid black; border-radius: 5px; box-shadow: 4px 4px 3px -3px rgba(0,0,0,0.55); padding: 10px;">
    <span style="font-size: 20px; font-weight: bold;"><%= post.title %></span>
    <div class="post_body" style="padding-top: 10px;"><%= post.body.html_safe %></div>

  Author: <%= User.find(post.user_id).first_name %>
  </div>
<% end %>
</div>