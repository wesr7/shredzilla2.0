<div class="container">
    <h1 class="text-center"> <%= @team.name %> </h1>
    <table style="width: 100%; border: 1px solid black; margin: 60px 0;">
    <tr>
        <th>Name</th>
        <th>Total Score</th>
        <th>Most Recent Note</th>
    </tr>
    <% @users.each do |u| %>
    <tr>
        <td class="text-center"><%= "#{u.first_name} #{u.last_name}" =%></td>
        <% if u.scores.where(day: Challenge.first.current_day - 1) == nil %>
        <td class="text-center">No Score For Yesterday</td>
        <% else %>
        <td class="text-center"><%= u.scores.where(day: Challenge.first.current_day - 1).challengetotal =%></td>
        <td> <%= u.scores.where(day: Challenge.first.current_day - 1).note =%> </td>
        <% end %>
    <% end %>
    </tr>
    </table>

</div>