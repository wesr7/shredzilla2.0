<%= form_for @user do |f| %>
  <label>First Name:</label>
  <%= f.text_field :first_name %>

  <label>Last Name:</label>
  <%= f.text_field :last_name %>

  <label>E-mail</label>
  <%= f.email_field :email %>

  <label>Password:</label>
  <%= f.password_field :password %>

  <label>Confirm Password:</label>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Sign Up" %>
<% end %>