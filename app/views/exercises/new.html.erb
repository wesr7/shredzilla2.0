

<%= form_for @exercise do |e| %>
    <p><strong><%= e.label :name %> </strong></p>
    <p><%= e.text_field :name %></p>
    <p><strong><%= e.label :video %></strong></p>
    <p><%= e.text_field :video, placeholder: "Video..." %></p>
    <%= e.submit 'Add Exercise' %>
<% end %>


