<div style="width: 600px; background: #CCCCCC; border-radius: 5px; margin: 0 auto; padding: 10px;">
<h2>SIGN IN</h2>
<%= form_tag '/login' do %>

  <div class="form-group">
  <label>Email</label>
  <%= email_field_tag :email, '' , class: "form-control" %>
  </div>

  <div class="form-group">
  <label>Password</label>
  <%= password_field_tag :password, '', class: "form-control" %>
  </div>

  <%= submit_tag "Log In", class: "btn btn-success" %>

<% end %>

</div>